<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Define database connection parameters as environment variables -->
    <Environment name="db.host" type="java.lang.String" value="${DB_HOST}" override="false"/>
    <Environment name="db.port" type="java.lang.String" value="${DB_PORT}" override="false"/>
    <Environment name="db.name" type="java.lang.String" value="${DB_NAME}" override="false"/>
    <Environment name="db.user" type="java.lang.String" value="${DB_USER}" override="false"/>
    <Environment name="db.password" type="java.lang.String" value="${DB_PASSWORD}" override="false"/>
</Context>
